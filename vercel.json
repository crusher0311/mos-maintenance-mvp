{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev", 
  "installCommand": "npm install",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    },
    "app/api/cron/data-quality/route.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/data-quality",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/dashboard-refresh",
      "schedule": "*/10 * * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}