generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Vehicle {
  id              String                  @id @default(cuid())
  vin             String                  @unique
  year            Int?
  make            String?
  model           String?
  trim            String?
  odometer        Int?
  updatedAt       DateTime                @updatedAt
  createdAt       DateTime                @default(now())
  recommendations ServiceRecommendation[]
  events          VehicleEvent[]
}

model ServiceRecommendation {
  id          String   @id @default(cuid())
  vehicleVin  String
  vehicle     Vehicle  @relation(fields: [vehicleVin], references: [vin], onDelete: Cascade)
  name        String
  status      String   // "due" | "overdue" | "coming_soon" | "not_yet"
  notes       String?
  source      String?  // "autoflow" | "oem" | "carfax" | etc.
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([vehicleVin])
  @@index([status])
}

model VehicleEvent {
  id          String   @id @default(cuid())
  vehicleVin  String
  vehicle     Vehicle  @relation(fields: [vehicleVin], references: [vin], onDelete: Cascade)
  type        String   // "webhook" | "visit" | "estimate" | ...
  payload     Json
  createdAt   DateTime @default(now())
  source      String?

  @@index([vehicleVin])
  @@index([type])
  @@index([createdAt])
}
